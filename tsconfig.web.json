{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/shared/**/*"
    // Note: The other patterns like *.tsx are already covered by src/**/*
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    // --- THIS IS THE FIX ---
    // The '@types' alias must be INSIDE this 'paths' object.
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
       "@types/*": ["src/renderer/src/types/*"],
      "@shared/*": [
        "src/shared/*"
      ],
      // Let's use the same alias here for consistency.
      "@components/*": [
        "src/renderer/src/components/*"
      ]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}